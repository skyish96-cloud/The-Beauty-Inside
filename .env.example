# ====================================
# Firebase 설정
# ====================================
# Firebase 서비스 계정 키 파일 경로
# 기본값: backend/serviceAccountKey.json 또는 secrets/firebase/serviceAccountKey.json
FIREBASE_CREDENTIALS_PATH=backend/serviceAccountKey.json

# Firebase 프로젝트 ID
# Application Default Credentials 사용시 필수
FIREBASE_PROJECT_ID=the-beauty-inside

# ====================================
# 애플리케이션 설정
# ====================================
APP_NAME=Beauty Inside API
APP_VERSION=1.0.0
DEBUG=False

# ====================================
# 서버 설정
# ====================================
HOST=0.0.0.0
PORT=8000

# ====================================
# WebSocket 설정
# ====================================
WS_TIMEOUT_SECONDS=30
WS_MAX_MESSAGE_SIZE=10485760

# ====================================
# 데이터 경로 설정
# ====================================
DATA_DIR=data
CELEB_EMBEDDINGS_PATH=data/celebs/embeddings
CELEB_META_PATH=data/celebs/meta
CELEB_IMAGES_PATH=data/celebs/images
CACHE_DIR=data/cache

# ====================================
# 얼굴 분석 설정
# ====================================
FACE_DETECTION_CONFIDENCE=0.7
FACE_EMBEDDING_MODEL=Facenet512
FACE_DETECTOR_BACKEND=retinaface

# ====================================
# 품질 검사 임계값
# ====================================
MIN_FACE_SIZE=80
MAX_FACES=1
BLUR_THRESHOLD=100.0
BRIGHTNESS_MIN=40
BRIGHTNESS_MAX=250

# ====================================
# 표정 분석 설정
# ====================================
EXPRESSION_CONFIDENCE_THRESHOLD=0.3

# ====================================
# 랭킹 설정
# ====================================
TOP_K=3
SIMILARITY_THRESHOLD=0.4

# ====================================
# 로깅 설정
# ====================================
LOG_LEVEL=INFO
LOG_FORMAT=json
